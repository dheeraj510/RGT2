<div class="jumbotron">
   <div class="container">
   <h1>Coin Compass</h1>
   <h2></h2>
   </div>
</div>
<table class="table table-hover table-table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Currency</th>
      <th>Bank</th>
      <th>Price</th>
      <th>Min</th>
      <th>Max</th>
    </tr>
  </thead>

  <tbody>
    <% @listings.each do |listing| %>
      <tr>
        <td><%= listing.user.name %></td>
        <td><%= listing.currency %></td>
        <td><%= listing.bank %></td>
        <td><%= number_to_currency(listing.price) %></td>
        <td><%= listing.min %></td>
        <td><%= listing.max %></td>
        <td><%= link_to 'Show', listing, class: "btn btn-link" %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="container">
 <% if user_signed_in? %>
<%= link_to 'New Listing', new_listing_path, class: "btn btn-link" %>
<% end %>
 
</div>
